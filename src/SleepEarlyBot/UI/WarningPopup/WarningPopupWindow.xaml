<Window x:Class="SleepEarlyBot.UI.WarningPopup.WarningPopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        Width="380"
        Height="170">
    <Border CornerRadius="10" Background="#FF1E1E1E" Padding="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0">
                <TextBlock x:Name="TitleText"
                           Foreground="White"
                           FontWeight="SemiBold"
                           FontSize="14"
                           DockPanel.Dock="Left" />
                <Button Content="X"
                        Width="26"
                        Height="26"
                        Margin="8,0,0,0"
                        DockPanel.Dock="Right"
                        Click="OnCloseClicked"/>
            </DockPanel>

            <TextBlock x:Name="BodyText"
                       Grid.Row="1"
                       Foreground="#FFDADADA"
                       FontSize="13"
                       TextWrapping="Wrap"
                       Margin="0,10,0,0"/>

            <DockPanel Grid.Row="2" Margin="0,10,0,0" LastChildFill="False">
                <Button x:Name="OverrideBtn"
                        Content="Override (+1h)"
                        Width="120"
                        Height="28"
                        Visibility="Collapsed"
                        Click="OnOverrideClicked"
                        DockPanel.Dock="Right"/>
            </DockPanel>
        </Grid>
    </Border>
</Window>
